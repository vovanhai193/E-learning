<title><%= t "category" %></title>
<h3><%= t "category" %></h3>
<% if @categories.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t "category.name" %></th>
      <th><%= t "category.description" %></th>
      <th><%= t "category.words_number" %></th>
      <th></th>
    </tr>
    <%= render @categories %>
  </table>
  <div class="text-center">
    <%= will_paginate %>
  </div>
<% else %>
  <%= t :no_items_found %>
<% end %>
